# Environment variables for Docker Compose
# Copy this file to .env and fill in your actual values

# External Elasticsearch Configuration
ELASTICSEARCH_HOST=https://your-elasticsearch-cluster.com:9243
ELASTICSEARCH_USERNAME=your-elasticsearch-username
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Azure OpenAI Configuration
OPENAI_AZURE_ENDPOINT_1=https://your-openai-resource.openai.azure.com/
OPENAI_API_KEY_1=your-openai-api-key
OPENAI_LLM_AZURE_DEPLOYMENT=gpt-35-turbo
OPENAI_LLM_API_VERSION=2023-12-01-preview
OPENAI_EMBEDDING_AZURE_DEPLOYMENT=text-embedding-ada-002
OPENAI_EMBEDDING_API_VERSION=2023-12-01-preview

# Azure SharePoint Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SHAREPOINT_DRIVE_ID=your-drive-id

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/knowledge_base

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
FLASK_ENV=production